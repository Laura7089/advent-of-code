#!/usr/bin/bash

cd 2019 || exit 1
for i in *; do
    cd "$i" || exit 1
    printf "\n==================\n"
    printf "Testing 2019/%s...\n" "$i"
    python3.8 solver.py >/dev/null || exit 1
    cd ..
done

printf "================================\n"
printf "All tests successful. Pushing...\n"
printf "================================\n"
